{
  "editor": {
    "fontSize": 18,
    "fontFamily": "'Monaspace Neon', 'Fira Code', Consolas, 'Courier New', monospace",
    "defaultFormatter": "prettier",
    "formatOnSave": true,
    "wordWrap": "off",
    "rulers": [
      {
        "column": 80,
        "color": "#ffffff15"
      }
    ],
    "guides": {
      "indentation": false,
      "bracketPairs": false
    },
    "lineHighlight": {
      "background": "#1073cf2d",
      "border": "#9fced11f"
    }
  },
  "workbench": {
    "colorTheme": "Default Dark Modern",
    "iconTheme": "vscode-icons",
    "editorPreview": false,
    "newWindowBehavior": "newWindow"
  },
  "liveServer": {
    "port": 5501,
    "showInfoMessages": false
  },
  "telemetry": {
    "enabled": false
  },
  "terminal": {
    "multiLinePasteWarning": false
  },
  "git": {
    "smartCommit": true
  },
  "security": {
    "untrustedFilesHandling": "open"
  },
  "unicode": {
    "highlightAmbiguousCharacters": false
  }
}
