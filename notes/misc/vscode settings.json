{
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  /*
  "[css]": {
      "editor.defaultFormatter": "stylelint.vscode-stylelint",
  },
  */

  "[javascript]": {
    // this is only to stop prettier overwriting standardjs's format
    "editor.defaultFormatter": "chenxsan.vscode-standardjs" //ignore the cannot format error it will give
  },

  "sync.gist": "2199f3bc7a155947a1e27a09545e4de0",

  "editor.defaultFormatter": "esbenp.prettier-vscode", //esbenp.prettier-vscode
  "editor.formatOnSave": true, //formats with prettifier on save first

  "editor.rulers": [
    {
      "column": 80,
      "color": "#ffffff15"
    }
  ],

  "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",

  "stylelint.enable": true,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,

  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": true,
    "source.fixAll.markdownlint": true
  },

  "javascript.validate.enable": false, // needed for standardjs
  "standard.autoFixOnSave": true, // fixes with standardjs on save

  "htmlhint.enable": true, // default is true, turn off to test

  "better-comments.multilineComments": true,

  "window.zoomLevel": 0,
  "workbench.iconTheme": "vscode-icons",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
}
